@model IEnumerable<MvcMusicStore.Models.Artist>

@{
    ViewData["Title"] = "Artists";
}

<h1>Artists</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table table-dark">
    <thead>
        <tr>
            <th>
#            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ArtistId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                 <a asp-action="Details" asp-route-id="@item.ArtistId" class="btn btn-success">Details</a>
                <a asp-action="Edit" asp-route-id="@item.ArtistId" class="btn btn-warning">Edit</a> 
                <a asp-action="Delete" asp-route-id="@item.ArtistId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
